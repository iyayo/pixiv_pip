{
  "name": "pixiv PiP",
  "version": "2.4",
  "manifest_version": 2,
  "description": "pixivのイラストをPiP（Picture-in-Picture）で表示する拡張機能です。",
  "icons" : {
    "16" : "icon/icon16.png",
    "32" : "icon/icon32.png",
    "48" : "icon/icon48.png",
    "128" : "icon/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png"
    },
    "default_title": "クリックで編集画面を表示",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "js": ["js/script.js", "js/zip.min.js"],
      "css": ["css/script.css"],
      "matches": ["https://www.pixiv.net/*"]
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": [
    "storage",
    "fontSettings",
    "webRequest",
    "webRequestBlocking",
    "https://i.pximg.net/*"
  ],
  "commands": {
    "image_rotate_90_clockwise": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      },
      "description": "画像を90度回転"
    },

    "image_rotate_90_counterclockwise": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      },
      "description": "画像を-90度回転"
    },

    "image_flip_horizontal": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up"
      },
      "description": "画像を左右反転"
    },

    "image_flip_vertical": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down"
      },
      "description": "画像を上下反転"
    }
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  }
}
